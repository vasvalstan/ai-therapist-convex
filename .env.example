# Hume.ai Configuration
HUME_API_KEY=your_hume_api_key                    # Required for voice analysis
HUME_SECRET_KEY=your_hume_secret_key              # Required for voice analysis
NEXT_PUBLIC_HUME_CONFIG_ID=your_hume_config_id    # Required for voice configuration

# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=your_convex_url            # Your Convex deployment URL
CONVEX_DEPLOYMENT=dev                             # 'dev' for development, 'prod' for production

# Authentication (Clerk)
CLERK_SECRET_KEY=your_clerk_secret                # Clerk authentication secret
CLERK_SIGNING_KEY=your_clerk_signing_key          # Required for Clerk JWT verification

# Payment Processing (Polar)
# Development
POLAR_SANDBOX_ACCESS_TOKEN=your_sandbox_token     # Polar sandbox environment access
POLAR_SANDBOX_WEBHOOK_SECRET=your_webhook_secret  # Polar sandbox webhook verification

# Production
POLAR_PRODUCTION_ACCESS_TOKEN=your_prod_token     # Polar production environment access
POLAR_PRODUCTION_WEBHOOK_SECRET=your_prod_secret  # Polar production webhook verification

# Frontend URLs
FRONTEND_URL_DEV=http://localhost:3001            # Local development URL
FRONTEND_URL=https://your-production-url.com      # Production URL 